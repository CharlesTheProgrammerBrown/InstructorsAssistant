<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.casper.instructorsassistant.StudentRemoveCourseActivity">
    <EditText
        android:id="@+id/std_coursename_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course name"
        android:drawableLeft="@drawable/ic_courses_icon"
        android:drawablePadding="10dp"
        android:textColorHint="@android:color/background_light"
        android:textColor="@android:color/background_light"
        android:ems="10"/>
    <Button
        android:id="@+id/stdCreateCoursebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Course"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:onClick="onDeleteCourseClicked"
        android:background="@drawable/button_token"/>
</LinearLayout>
