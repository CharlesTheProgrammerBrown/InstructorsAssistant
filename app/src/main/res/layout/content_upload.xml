<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.casper.instructorsassistant.UploadActivity"
    tools:showIn="@layout/activity_upload">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_allUploadsPage"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_weight="3.4"
        app:layout_anchor="@id/pageTitle"
        android:paddingTop="40dp"
        app:layoutManager="LinearLayoutManager"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp" />
    <EditText
        android:layout_margin="10dp"
        android:id="@+id/filename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:drawableLeft="@drawable/pdf_doc_blue"
        android:background="@drawable/button_token"
        android:textColor="#00695C"
        android:hint="filename"/>
    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />
</LinearLayout>
