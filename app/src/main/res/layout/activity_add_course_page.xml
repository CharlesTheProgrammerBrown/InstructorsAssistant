<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context="com.example.casper.instructorsassistant.AddCoursePage">
        <EditText
            android:id="@+id/coursename_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Course name"
            android:drawableLeft="@drawable/ic_courses_icon"
            android:drawablePadding="10dp"
            android:textColorHint="@android:color/background_light"
            android:textColor="@android:color/background_light"
            android:ems="10"/>
        <Button
            android:id="@+id/createCoursebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Course"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:onClick="onCreateCourseBtnClicked"
            android:background="@drawable/button_token"/>
</LinearLayout>
