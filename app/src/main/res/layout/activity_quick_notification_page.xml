<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/backgroundColour"
    tools:context="com.example.casper.instructorsassistant.QuickNotificationPage">
    <TextView
        android:id="@+id/textPageName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CMSE471"
        android:textSize="35sp"
        android:textAlignment="center"
        android:textColorHint="@android:color/background_light"
        android:textColor="@android:color/background_light"
        android:layout_marginBottom="40dp"
        android:ems="10"/>
    <EditText
        android:id="@+id/notify_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Notification text"
        android:drawableLeft="@drawable/notify_icon_blue"
        android:drawablePadding="7dp"
        android:textColorHint="@android:color/background_light"
        android:textColor="@android:color/background_light"
        android:ems="10"/>
    <Button
        android:id="@+id/notifyToSendbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Notification"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:textColor="#00ff00"
        android:drawableRight="@drawable/send_green"
        android:onClick="onSendNotificationClicked"
        android:background="@drawable/button_token"/>
</LinearLayout>
