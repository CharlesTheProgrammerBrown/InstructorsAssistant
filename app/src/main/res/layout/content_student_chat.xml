<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.casper.instructorsassistant.StudentChatActivity"
    tools:showIn="@layout/activity_student_chat">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_student_chatActivity"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_weight="3.4"
        app:layoutManager="LinearLayoutManager"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp" />
    <EditText
        android:layout_margin="10dp"
        android:id="@+id/msgTextStd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:drawableLeft="@drawable/chat_circle_blue"
        android:drawablePadding="10dp"
        android:background="@drawable/button_token"
        android:textColor="#00695C"
        android:hint="Message"/>
</LinearLayout>
