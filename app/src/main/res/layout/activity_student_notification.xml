<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColour"
    tools:context="com.example.casper.instructorsassistant.StudentNotificationActivity">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/remindfour"
        android:layout_marginBottom="20dp"
        />
    <LinearLayout
        android:layout_below="@id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/stdNotifyHeader_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification Header name"
            android:drawableLeft="@drawable/notify_icon_med"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColorHint="@android:color/background_light"
            android:textColor="@android:color/background_light"
            android:ems="10"/>
        <TextView
            android:id="@+id/stdNotifyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No message"
            android:drawableLeft="@drawable/ic_id"
            android:drawablePadding="10dp"
            android:textSize="25dp"
            android:background="@drawable/fill_form"
            android:textColorHint="@android:color/background_light"
            android:textColor="@android:color/background_light"
            android:ems="10"/>
        <TextView
            android:id="@+id/stdNotifyDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time"
            android:drawableLeft="@drawable/ic_token"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/button_token"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColorHint="@android:color/background_light"
            android:textColor="@android:color/background_light"
            android:ems="10"/>
    </LinearLayout>
</LinearLayout>
