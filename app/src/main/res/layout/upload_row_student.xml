<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:background="@color/backgroundColour"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/stdUploadName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ExamResults"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="20sp"
        android:drawableLeft="@drawable/pdf_doc_blue"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <TextView
            android:id="@+id/stdUploadDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="21/2/2017"
            android:layout_weight="2"
            android:gravity="center"
            />
        <Button
            android:layout_weight="2"
            android:id="@+id/stdDownloadBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/download_icon_cloud"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
</LinearLayout>